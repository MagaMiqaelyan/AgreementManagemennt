@model AgreementManagementTask.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Product";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.Product.Id!= 0)
        {
            title = "Edit Product";
        }

        <div class="hide">
            <input asp-for="Product.Id" class="form-control" hidden />
            <span asp-validation-for="Product.Id" class="text-danger"></span>
        </div>

        <div class="col-12 border-bottom">
            <h2 class="text-dark">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4 p-1">
                    <label asp-for="Product.ProductGroup.GroupCode"></label>
                </div>
                <div class="col-5 p-1">
                    @Html.DropDownListFor(m => m.Product.ProductGroupId, Model.ProductGroups, new { @class = "form-control" })
                    <span asp-validation-for="Product.ProductGroup" class="text-danger"></span>
                </div>

                <div class="col-4 p-1">
                    <label class="align-content-center" asp-for="Product.Price"></label>
                </div>
                <div class="col-5 p-1">
                    <input asp-for="Product.Price" placeholder="Date to" autocomplete="none" class="datepicker d-block ms-1 form-control" id="effective_date">
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="col-4 p-1">
                    <label asp-for="Product.ProductNumber"></label>
                </div>
                <div class="col-5 p-1">
                    <input asp-for="Product.ProductNumber" placeholder="Date to" autocomplete="none" class="datepicker d-block ms-1 form-control" id="expiration_date">
                    <span asp-validation-for="Product.ProductNumber" class="text-danger"></span>
                </div>

                <div class="col-4 p-1">
                    <label asp-for="Product.ProductDescription"></label>
                </div>
                <div class="col-5 p-1">
                    <input asp-for="Product.ProductDescription" class="form-control" />
                    <span asp-validation-for="Product.ProductDescription" class="text-danger"></span>
                </div>
            </div>
                <div class="form-group row">
                    <div class="col-5 offset-4">
                        @if (Model.Product.Id != 0)
                        {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" style="background-color: #8168A9; " class="btn text-light form-control" asp-route-id="@Model.Product.Id">Save</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" style="background-color: #8168A9; " class="btn text-light form-control" asp-route-id="@Model.Product.Id">Cancel</a>
                                </div>
                            </div> 
                         }
                         else
                         {
                            <div class="row">
                                <div class="col">
                                    <button type="submit" style="background-color: #8168A9; " class="btn text-light form-control">Create</button>
                                </div>
                                <div class="col">
                                    <a asp-action="Index" style="background-color: #8168A9; " class="btn text-light form-control" asp-controller="Agreement" asp-area="">Back</a>
                                </div>
                            </div>
                         }
                    </div>
                </div>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


